{
    "name": "ets",
    "author": "nhaef <ets@nico.icu>",
    "version": "0.1.0",
    "license": "Apache-2.0",
    "homepage": "https://github.com/nhaef/ets#readme",
    "description": "Simple templating engine which lets you generate HTML markup using TypeScript",
    "keywords": [
        "ejs",
        "ets",
        "template engine",
        "view engine",
        "express rendering engine",
        "typescript"
    ],
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "type": "module",
    "engines": {
        "node": ">=12.0.0"
    },
    "scripts": {
        "build": "rimraf dist && tsc -p ./tsconfig.json",
        "format": "prettier --config ./.prettierrc --write 'src/**/*.ts'",
        "format-check": "prettier --config ./.prettierrc --check 'src/**/*.ts'",
        "lint": "eslint -c ./.eslintrc.json 'src/**/*.ts'",
        "test": "nyc ts-mocha -p ./tsconfig.test.json 'src/**/*.test.ts'"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/nhaef/ets.git"
    },
    "bugs": {
        "url": "https://github.com/nhaef/ets/issues"
    },
    "devDependencies": {
        "@istanbuljs/nyc-config-typescript": "^1.0.2",
        "@types/chai": "^4.3.4",
        "@types/mocha": "^10.0.1",
        "@types/node": "^18.11.12",
        "@typescript-eslint/eslint-plugin": "^5.46.0",
        "@typescript-eslint/parser": "^5.46.0",
        "chai": "^4.3.7",
        "eslint": "^8.29.0",
        "eslint-config-prettier": "^8.5.0",
        "nyc": "^15.1.0",
        "prettier": "^2.8.1",
        "rimraf": "^3.0.2",
        "ts-mocha": "^10.0.0",
        "typescript": "^4.9.4"
    }
}
